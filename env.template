# Discord Music Bot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS - You must set these!
# =============================================================================

# Your Discord Bot Token (get this from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# =============================================================================
# OPTIONAL SETTINGS - These have sensible defaults
# =============================================================================

# Bot Configuration
BOT_PREFIX=!
BOT_NAME=MusicBot

# Music Configuration
MAX_QUEUE_SIZE=100
MAX_PLAYLIST_SIZE=50
MAX_SONG_LENGTH=600

# Audio Configuration
DEFAULT_VOLUME=0.5
MAX_VOLUME=1.0

# Auto-disconnect Configuration
AUTO_DISCONNECT_DELAY=10

# Database Configuration (if using persistent storage)
# DATABASE_URL=sqlite:///musicbot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=musicbot.log

# =============================================================================
# SETUP INSTRUCTIONS:
# =============================================================================
# 1. Copy this file: cp env.template .env
# 2. Edit .env and replace 'your_discord_bot_token_here' with your actual token
# 3. Customize other settings as needed
# 4. Save the file
# 5. Run the bot: python main.py
